# ============================================
# UV Market School - Environment Configuration
# ============================================
# Copy this file to .env.local for local development
# Set these variables in your hosting platform for production

# Authentication (Required)
# ------------------------------------------------------------------------------
# NEXTAUTH_URL: The canonical URL of your deployed application
# - Local development: http://localhost:3000
# - Production: https://your-domain.com (or your Railway URL)
NEXTAUTH_URL=http://localhost:3000

# NEXTAUTH_SECRET: Secret key for JWT encryption
# Generate with: openssl rand -base64 32
# This MUST be set and kept secure in production
NEXTAUTH_SECRET=

# Database - PostgreSQL (Railway Production)
# ------------------------------------------------------------------------------
# DATABASE_URL: Railway PostgreSQL connection string
# Format: postgres://username:password@hostname:port/database
# Railway provides this automatically when you add a PostgreSQL database
DATABASE_URL=

# Database - Local SQLite (Development Only)
# ------------------------------------------------------------------------------
# Used for local development with better-sqlite3 when DATABASE_URL is not set
# DATABASE_URL=file:./dev.db

# Database - Turso/LibSQL (Alternative Production)
# ------------------------------------------------------------------------------
# TURSO_DATABASE_URL: Your Turso database URL
# Format: libsql://your-database-name.turso.io
TURSO_DATABASE_URL=

# TURSO_AUTH_TOKEN: Authentication token for Turso
# Get this from the Turso dashboard or CLI: turso db tokens create <db-name>
TURSO_AUTH_TOKEN=

# Razorpay Payments (Optional)
# ------------------------------------------------------------------------------
# Only required if using Razorpay payment integration
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# Node Environment (Set automatically by most hosting platforms)
# ------------------------------------------------------------------------------
# NODE_ENV=production
