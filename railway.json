{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm run build",
    "watchPatterns": ["src/**", "prisma/**", "public/**"]
  },
  "deploy": {
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE"
  },
  "services": {
    "web": {
      "environment": {
        "NODE_ENV": "production",
        "PORT": "3000"
      }
    }
  }
}
