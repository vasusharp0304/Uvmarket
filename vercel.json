{
  "buildCommand": "prisma generate && next build",
  "devCommand": "next dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "env": {
    "NEXTAUTH_URL": {
      "description": "The URL of your deployed site",
      "value": ""
    },
    "NEXTAUTH_SECRET": {
      "description": "A secret key for NextAuth.js (generate with: openssl rand -base64 32)",
      "value": "",
      "required": true
    },
    "TURSO_DATABASE_URL": {
      "description": "LibSQL/Turso database URL (e.g., libsql://your-db.turso.io)",
      "value": "",
      "required": true
    },
    "TURSO_AUTH_TOKEN": {
      "description": "Turso authentication token",
      "value": "",
      "required": true
    },
    "RAZORPAY_KEY_ID": {
      "description": "Razorpay Key ID",
      "value": ""
    },
    "RAZORPAY_KEY_SECRET": {
      "description": "Razorpay Key Secret",
      "value": ""
    }
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}
